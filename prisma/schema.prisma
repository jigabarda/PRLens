datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int     @id @default(autoincrement())
  name       String?
  email      String  @unique
  image      String?
  createdAt  DateTime @default(now())
  // add more fields later as needed
}

model Analysis {
  id         Int      @id @default(autoincrement())
  owner      String
  repo       String
  prNumber   Int
  resultJson String   @db.Text
  createdAt  DateTime @default(now())
}
